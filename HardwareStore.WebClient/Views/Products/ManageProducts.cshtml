@{
    ViewData["Title"] = "Manage Products";
    Layout = "_Layout";
}

<div class="max-w-[1400px] mx-auto mt-8 px-8">
    <!-- Header -->
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-4xl font-semibold text-gray-900">Manage Products</h1>
        <a href="/Products/CreateProduct" class="inline-flex items-center bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Add Product
        </a>
    </div>

    <!-- Products Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        @foreach (var product in Model)
        {
            <div class="bg-white border border-gray-200 rounded-2xl p-6 shadow-md hover:-translate-y-1 transition-transform">
                <!-- Product Image -->
                <div class="w-full h-48 bg-gray-100 rounded-xl flex items-center justify-center mb-4 overflow-hidden">
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="@product.Name" class="w-full h-full object-cover" />
                    }
                    else
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L15 12l-5.25-5M15 12H3" />
                        </svg>
                    }
                </div>

                <!-- Product Info -->
                <h3 class="text-lg font-semibold mb-1">@product.Name</h3>
                <div class="text-blue-600 font-semibold text-lg mb-1">$@product.Price.ToString("F2")</div>

                <div class="text-gray-500 mb-4">
                    @if (product.StockQuantity < 10)
                    {
                        <span class="text-red-500 font-medium">Low stock: @product.StockQuantity units</span>
                    }
                    else
                    {
                        <p>In stock: @product.StockQuantity units</p>
                    }
                </div>

                <!-- Product Actions -->
                <div class="flex gap-2">
                    <button class="flex-1 px-3 py-2 border border-blue-600 text-blue-600 rounded-lg hover:bg-blue-50" onclick="editProduct(@product.Id)">
                        Edit
                    </button>
                    <button class="flex-1 px-3 py-2 border border-red-600 text-red-600 rounded-lg hover:bg-red-50" onclick="deleteProduct(@product.Id)">
                        Delete
                    </button>
                </div>
            </div>
        }
    </div>
</div>
