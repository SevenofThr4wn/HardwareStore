@model HardwareStore.WebClient.ViewModels.Account.ProfileViewModel
@{
    ViewData["Title"] = "Account Management";
    Layout = "_Layout";
}

<main class="max-w-7xl mx-auto my-12 px-6">
    <div class="flex flex-col md:flex-row md:space-x-6">
        <!-- Sidebar -->
        <aside class="md:w-1/4 mb-8 md:mb-0">
            <!-- User Card -->
            <div class="bg-white rounded-2xl border border-gray-200 shadow-lg p-6 text-center mb-6 transform transition hover:-translate-y-1 hover:shadow-2xl">
                <i class="bi bi-person-circle text-gray-400 text-6xl mb-4"></i>
                <h5 class="text-xl font-semibold mb-1">@Model.DisplayName</h5>
                <p class="text-gray-500 text-sm mb-4">@Model.Email</p>

                @if (User.IsInRole("Admin"))
                {
                    <div class="flex flex-wrap justify-center gap-2 mb-2">
                        <span class="bg-blue-600 text-white px-3 py-1 rounded-full text-sm font-semibold flex items-center gap-1">
                            <i class="bi bi-briefcase text-xs"></i> Staff
                        </span>
                        <span class="bg-red-600 text-white px-3 py-1 rounded-full text-sm font-semibold flex items-center gap-1">
                            <i class="bi bi-shield-check text-xs"></i> Administrator
                        </span>
                    </div>
                }
                @if (User.IsInRole("Manager"))
                {
                    <div class="flex flex-wrap justify-center gap-2 mb-2">
                        <span class="bg-blue-600 text-white px-3 py-1 rounded-full text-sm font-semibold flex items-center gap-1">
                            <i class="bi bi-briefcase text-xs"></i> Staff
                        </span>
                        <span class="bg-red-600 text-white px-3 py-1 rounded-full text-sm font-semibold flex items-center gap-1">
                            <i class="bi bi-shield-check text-xs"></i> Administrator
                        </span>
                        <span class="bg-purple-600 text-white px-3 py-1 rounded-full text-sm font-semibold flex items-center gap-1">
                            <i class="bi bi-gear text-xs"></i> Manager
                        </span>
                    </div>
                }
                @if (User.IsInRole("Staff"))
                {
                    <div class="flex justify-center mb-2">
                        <span class="bg-blue-600 text-white px-3 py-1 rounded-full text-sm font-semibold flex items-center gap-1">
                            <i class="bi bi-briefcase text-xs"></i> Staff
                        </span>
                    </div>
                }
            </div>

            <!-- Navigation -->
            <ul class="flex flex-col space-y-2">
                <li><a class="flex items-center px-4 py-2 rounded-xl text-gray-900 bg-blue-600 text-white" href="#"><i class="bi bi-person me-2"></i> Account</a></li>
                <li><a class="flex items-center px-4 py-2 rounded-xl text-gray-900 hover:bg-blue-100 transition" href="#"><i class="bi bi-shield-lock me-2"></i> Security</a></li>
                <li><a class="flex items-center px-4 py-2 rounded-xl text-gray-900 hover:bg-blue-100 transition" href="#"><i class="bi bi-credit-card me-2"></i> Payment & Shipping</a></li>
                <li><a class="flex items-center px-4 py-2 rounded-xl text-gray-900 hover:bg-blue-100 transition" href="#"><i class="bi bi-phone me-2"></i> Devices</a></li>
                <li><a class="flex items-center px-4 py-2 rounded-xl text-gray-900 hover:bg-blue-100 transition" href="#"><i class="bi bi-cloud me-2"></i> iCloud</a></li>
                <li><a class="flex items-center px-4 py-2 rounded-xl text-gray-900 hover:bg-blue-100 transition" href="#"><i class="bi bi-people me-2"></i> Family Sharing</a></li>

                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                {
                    <li class="mt-3">
                        <div class="relative">
                            <button class="w-full bg-gradient-to-tr from-red-600 to-red-500 text-white font-semibold px-4 py-2 rounded-xl flex items-center justify-center focus:outline-none">
                                <i class="bi bi-shield-lock me-2"></i> Admin Panel
                            </button>
                            <ul class="absolute left-0 mt-1 w-full bg-white border border-gray-200 rounded-xl shadow-lg hidden group-hover:block z-10">
                                <li><a class="block px-4 py-2 hover:bg-gray-100" href="/Dashboard/AdminDashboard"><i class="bi bi-speedometer2 me-2"></i> Dashboard</a></li>
                                <li><a class="block px-4 py-2 hover:bg-gray-100" href="/Users/ManageUsers"><i class="bi bi-people me-2"></i> Manage Users</a></li>
                                <li><a class="block px-4 py-2 hover:bg-gray-100" href="/Products/ManageProducts"><i class="bi bi-box me-2"></i> Manage Products</a></li>
                                <li><a class="block px-4 py-2 hover:bg-gray-100" href="/Orders/ManageOrders"><i class="bi bi-cart me-2"></i> Manage Orders</a></li>
                                <li><hr class="my-1 border-gray-200" /></li>
                                <li><a class="block px-4 py-2 hover:bg-gray-100" href="/Settings/AdminSettings"><i class="bi bi-gear me-2"></i> Admin Settings</a></li>
                                @if (User.IsInRole("Manager"))
                                {
                                    <li><a class="block px-4 py-2 hover:bg-gray-100" href="/Settings/ManagerSettings"><i class="bi bi-gear me-2"></i> Manager Settings</a></li>
                                }
                            </ul>
                        </div>
                    </li>
                }

                <li class="mt-3">
                    <form asp-controller="Auth" asp-action="Logout" method="post">
                        <button type="submit" class="w-full bg-red-600 text-white px-4 py-2 rounded-xl flex items-center justify-center hover:bg-red-700 transition">
                            <i class="bi bi-box-arrow-right me-2"></i> Sign Out
                        </button>
                    </form>
                </li>
            </ul>
        </aside>

        <!-- Main Content -->
        <section class="md:w-3/4 space-y-6">
            <!-- Account Info Card -->
            <div class="bg-white rounded-2xl border border-gray-200 shadow-lg p-6 space-y-6">
                <h4 class="text-2xl font-semibold">Account</h4>

                <div class="grid md:grid-cols-2 gap-6">
                    <!-- Personal Info -->
                    <div>
                        <h5 class="text-lg font-semibold mb-2">Personal Information</h5>
                        <p class="text-gray-500">@Model.DisplayName</p>
                        <p class="text-gray-500">@Model.Email</p>
                        <button class="mt-2 px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-100 transition text-sm">Edit</button>
                    </div>

                    <!-- Contact Info -->
                    <div>
                        <h5 class="text-lg font-semibold mb-2">Contact Information</h5>
                        <p class="text-gray-500">+1 (555) 123-4567</p>
                        <p class="text-gray-500">123 Apple Street, Cupertino, CA 95014</p>
                        <button class="mt-2 px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-100 transition text-sm">Edit</button>
                    </div>
                </div>

                <!-- Security -->
                <hr class="my-4 border-gray-200" />
                <h5 class="text-lg font-semibold mb-2">Security</h5>
                <div class="grid md:grid-cols-2 gap-6">
                    <div class="bg-gray-50 border-l-4 border-blue-600 p-4 rounded-lg">
                        <h6 class="font-semibold flex items-center gap-2"><i class="bi bi-shield-lock"></i> Password</h6>
                        <p class="text-gray-500">Last changed 3 months ago</p>
                        <button class="mt-2 px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-100 transition text-sm">Change Password</button>
                    </div>
                    <div class="bg-gray-50 border-l-4 border-blue-600 p-4 rounded-lg">
                        <h6 class="font-semibold flex items-center gap-2"><i class="bi bi-key"></i> Two-Factor Authentication</h6>
                        <p class="text-gray-500">Enabled</p>
                        <button class="mt-2 px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-100 transition text-sm">Manage</button>
                    </div>
                </div>

                <!-- Orders -->
                <hr class="my-4 border-gray-200" />
                <h5 class="text-lg font-semibold mb-2">Orders</h5>
                <div class="grid md:grid-cols-2 gap-6">
                    <div class="bg-white border-l-4 border-blue-600 shadow rounded-xl p-4 flex items-center gap-4">
                        <i class="bi bi-phone text-2xl"></i>
                        <div>
                            <h6 class="font-semibold">NVIDIA RTX 4090</h6>
                            <p class="text-gray-500 mb-1">Price: $2000 AUD</p>
                            <small class="text-gray-400">Order Placed: Today</small>
                        </div>
                    </div>
                    <div class="bg-white border-l-4 border-blue-600 shadow rounded-xl p-4 flex items-center gap-4">
                        <i class="bi bi-laptop text-2xl"></i>
                        <div>
                            <h6 class="font-semibold">MacBook Pro</h6>
                            <p class="text-gray-500 mb-1">Price: $500 AUD</p>
                            <small class="text-gray-400">Order Placed: Yesterday</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Completed Orders Table -->
            <div class="bg-white rounded-2xl border border-gray-200 shadow-lg p-6">
                <h4 class="text-2xl font-semibold mb-4">Completed Orders</h4>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200 text-sm">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-4 py-2 text-left font-semibold text-gray-700">Order Name</th>
                                <th class="px-4 py-2 text-left font-semibold text-gray-700">Items</th>
                                <th class="px-4 py-2 text-left font-semibold text-gray-700">Date Completed</th>
                                <th class="px-4 py-2 text-left font-semibold text-gray-700">Action</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200">
                            <tr>
                                <td class="px-4 py-2"><i class="bi bi-music-note-beamed me-2"></i> Apple Music</td>
                                <td class="px-4 py-2">Individual</td>
                                <td class="px-4 py-2">June 15, 2023</td>
                                <td class="px-4 py-2">
                                    <button class="px-3 py-1 border border-gray-300 rounded text-gray-700 hover:bg-gray-100 transition text-sm">Manage</button>
                                </td>
                            </tr>
                            <tr>
                                <td class="px-4 py-2"><i class="bi bi-tv me-2"></i> Apple TV+</td>
                                <td class="px-4 py-2">Family</td>
                                <td class="px-4 py-2">June 20, 2023</td>
                                <td class="px-4 py-2">
                                    <button class="px-3 py-1 border border-gray-300 rounded text-gray-700 hover:bg-gray-100 transition text-sm">Manage</button>
                                </td>
                            </tr>
                            <tr>
                                <td class="px-4 py-2"><i class="bi bi-cloud me-2"></i> iCloud</td>
                                <td class="px-4 py-2">200GB</td>
                                <td class="px-4 py-2">June 1, 2023</td>
                                <td class="px-4 py-2">
                                    <a href="/Order/ManageOrder" class="px-3 py-1 border border-gray-300 rounded text-gray-700 hover:bg-gray-100 transition text-sm">Manage</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
</main>

@section Scripts {
    <script src="https://unpkg.com/feather-icons"></script>
    <script>
        feather.replace();
    </script>
}