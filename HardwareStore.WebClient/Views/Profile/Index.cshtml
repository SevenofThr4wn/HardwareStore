@model HardwareStore.WebClient.ViewModels.Profile.ProfileOverviewViewModel
@{
    ViewData["Title"] = "Account Management";
    Layout = "_Layout";
}
<head>
    <style>

        body {
            background-color: #f5f5f7;
            color: #1d1d1f;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            font-size: 16px;
        }

        .apple-header {
            background-color: rgba(0, 0, 0, 0.8);
        }

        .account-card {
            border-radius: 16px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            background: white;
            border: 1px solid #e5e5e7;
        }

        .account-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 16px 32px rgba(0, 0, 0, 0.12);
        }

        .nav-pills .nav-link.active {
            background-color: #0071e3;
            font-size: 1.1rem;
            padding: 0.75rem 1rem;
        }

        .nav-pills .nav-link {
            font-size: 1.1rem;
            padding: 0.75rem 1rem;
            color: #1d1d1f;
            border-radius: 12px;
            margin-bottom: 0.5rem;
        }

        .btn-apple {
            background-color: #0071e3;
            color: white;
            font-size: 1.1rem;
            padding: 0.75rem 1.5rem;
            border-radius: 12px;
            font-weight: 500;
        }

        .btn-apple:hover {
            background-color: #0062c4;
            color: white;
            transform: translateY(-1px);
        }

        .security-item {
            border-left: 4px solid #0071e3;
            padding: 1.5rem;
            border-radius: 12px;
            background: #f8f9fa;
        }

        .device-card {
            border-left: 5px solid #0071e3;
            border-radius: 12px;
            transition: transform 0.2s ease;
        }

        .device-card:hover {
            transform: translateY(-2px);
        }

        .badge-manager {
            background: linear-gradient(135deg, #9933ff, #9933ff, #9933ff);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 24px;
            font-size: 0.9rem;
            font-weight: 600;
            letter-spacing: 0.05em;
            box-shadow: 0 6px 12px rgba(139, 92, 246, 0.25);
            display: inline-block;
            line-height: 1.2;
            white-space: nowrap;
            /* Force vertical offset */
            position: relative;
            top: 15px; /* adjust up/down until it looks right */
        }
        
        .badge-admin {
            background: linear-gradient(135deg, #cc0000, #cc0000, #cc0000);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 24px;
            font-size: 0.9rem;
            font-weight: 600;
            letter-spacing: 0.05em;
            box-shadow: 0 6px 12px rgba(139, 92, 246, 0.25);
            display: inline;
            line-height: 1.2;
            white-space: nowrap;
        }

        .badge-staff {
            background: linear-gradient(135deg, #3366ff, #3366ff, #3366ff);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 24px;
            font-size: 0.9rem;
            font-weight: 600;
            letter-spacing: 0.05em;
            box-shadow: 0 6px 12px rgba(139, 92, 246, 0.25);
        }


        .badges-inline {
            margin: 0.9rem 0;
            line-height: 1;
        }

            .badges-inline .badge-manager+ .badge-admin,
            .badges-inline .badge-admin+ .badge-manager {
                margin-left: 0.5rem;
            }

            /* Ensure proper vertical alignment */
            .badges-inline .badge-manager,
            .badges-inline .badge-admin {
                vertical-align: baseline; /* Align to text baseline */
            }

        .admin-badge-container {
            margin-top: 1.0rem;
            margin-bottom: 2rem;
        }

        .badge-icon {
            margin-right: 0.3rem !important;
            font-size: 0.7rem;
            vertical-align: -0.1em;
        }

        /* 1440p+ Optimized Styles */
        .container {
            max-width: 1600px;
            padding-left: 2rem;
            padding-right: 2rem;
        }

        main.container {
            margin-top: 3rem;
            margin-bottom: 3rem;
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
        }

        h5 {
            font-size: 1.3rem;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        h6 {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 0.75rem;
        }

        .card-body {
            padding: 2rem;
        }

        .table {
            font-size: 1.05rem;
        }

        .table th {
            font-size: 1.1rem;
            font-weight: 600;
            padding: 1rem 0.75rem;
        }

            .table td {
                padding: 0.875rem 0.75rem;
            }

        .btn {
            font-size: 1.05rem;
            padding: 0.625rem 1.25rem;
            border-radius: 10px;
        }

        .btn-sm {
            font-size: 0.95rem;
            padding: 0.5rem 1rem;
        }

        /* Larger icons for high-resolution displays */
        .bi {
            font-size: 1.2em;
        }

        .fs-1 {
            font-size: 3.5rem !important;
        }

        .fs-3 {
            font-size: 2rem !important;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            body {
                font-size: 14px;
            }

            .container {
                padding-left: 1rem;
                padding-right: 1rem;
                max-width: 100%;
            }

            .card-body {
                padding: 1.5rem;
            }

            .card-title {
                font-size: 1.3rem;
            }

            .fs-1 {
                font-size: 2.5rem !important;
            }
        }

        /* 1080p Optimization */
        @@media (min-width: 1920px) and (max-width: 2560px) {
            .container {
                max-width: 1800px;
            }

            body {
                font-size: 17px;
            }

            .card-title {
                font-size: 1.6rem;
            }
        }

        /* 1440p+ Specific (2560px and above) */
        @@media (min-width: 2560px) {
            .container {
                max-width: 2000px;
            }

            body {
                font-size: 18px;
            }

            .card-title {
                font-size: 1.75rem;
            }

            h5 {
                font-size: 1.5rem;
            }

            h6 {
                font-size: 1.25rem;
            }

            .card-body {
                padding: 2.5rem;
            }

            .table {
                font-size: 1.15rem;
            }

            .btn {
                font-size: 1.1rem;
                padding: 0.75rem 1.5rem;
            }
            /* Even larger icons for ultra-high resolution */
            .bi {
                font-size: 1.3em;
            }

            .fs-1 {
                font-size: 4rem !important;
            }

            .fs-3 {
                font-size: 2.5rem !important;
            }
        }

        /* 4K and Ultra-wide displays */
        @@media (min-width: 3840px) {
            .container {
                max-width: 2400px;
            }

            body {
                font-size: 20px;
            }
        }

        /* High DPI/Retina displays */
        @@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
            .account-card {
                box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
            }

            .badge-manager {
                box-shadow: 0 4px 16px rgba(139, 92, 246, 0.2);
            }
        }

        /* Accessibility improvements */
        @@media (prefers-reduced-motion: reduce) {
            .account-card, .device-card, .btn-apple {
                transition: none;
                transform: none !important;
            }
        }

        /* Improved spacing for large screens */
        .row {
            margin-left: -0.75rem;
            margin-right: -0.75rem;
        }

        .col-md-3, .col-md-9 {
            padding-left: 0.75rem;
            padding-right: 0.75rem;
        }

        .mb-4 {
            margin-bottom: 2rem !important;
        }

        .my-4 {
            margin-top: 2rem !important;
            margin-bottom: 2rem !important;
        }

    </style>
</head>
<body>
    <!-- Main Content -->
    <main class="container my-4">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 mb-4">
                <div class="card account-card mb-3">
                    <div class="card-body text-center">
                        <i class="bi bi-person-circle fs-1 text-secondary mb-2"></i>
                        <h5 class="card-title">@Model.DisplayName</h5>
                        <p class="text-muted">@Model.Email</p>

                        <!-- Admin badge and Staff badge if user is admin -->
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="badges-inline">
                                <span class="badge-staff">Staff</span>
                                <span class="badge-admin"><i class="bi bi-shield-check badge-icon"></i>Administrator</span>
                            </div>
                        }
                        <!-- Admin, staff, and manager badge if user is manager -->
                        @if (User.IsInRole("Manager"))
                        {
                            <div class="badges-inline">
                                <span class="badge-staff"><i class="bi bi-briefcase badge-icon"></i>Staff</span>
                                <span class="badge-admin"><i class="bi bi-shield-check badge-icon"></i>Administrator</span>
                                <span class="badge-manager"><i class="bi bi-gear badge-icon"></i>Manager</span>
                            </div>                            
                        }

                        <!-- Staff badge user is staff -->
                        @if (User.IsInRole("Staff"))
                        {
                            <div class="badges-inline">
                                <span class="badge-staff">Staff</span>
                            </div>
                        }
                    </div>
                </div>

                <ul class="nav nav-pills flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="#"><i class="bi bi-person me-2"></i> Account</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-shield-lock me-2"></i> Security</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-credit-card me-2"></i> Payment & Shipping</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-phone me-2"></i> Devices</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-cloud me-2"></i> iCloud</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-people me-2"></i> Family Sharing</a>
                    </li>

                    <!-- Admin Menu Button (Only for Admins & Manager) -->
                    @if (User.IsInRole("Admin") && User.IsInRole("Manager"))
                    {
                        <li class="nav-item mt-3">
                            <div class="dropdown">
                                <button class="btn admin-btn w-100 dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-shield-lock me-2"></i> Admin Panel
                                </button>
                                <ul class="dropdown-menu w-100">
                                    <li>
                                        <a class="dropdown-item" href="/Admin/Dashboard">
                                            <i class="bi bi-speedometer2 me-2"></i> Dashboard
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/Admin/Users">
                                            <i class="bi bi-people me-2"></i> Manage Users
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/Admin/Products">
                                            <i class="bi bi-box me-2"></i> Manage Products
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/Admin/Orders">
                                            <i class="bi bi-cart me-2"></i> Manage Orders
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="/Admin/Settings">
                                            <i class="bi bi-gear me-2"></i> Admin Settings
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    }

                    <li class="nav-item">
                        <form asp-controller="Account" asp-action="Logout" method="post" class="mt-3">
                            <button type="submit" class="btn btn-outline-danger w-100">
                                <i class="bi bi-box-arrow-right me-2"></i> Sign Out
                            </button>
                        </form>
                    </li>
                </ul>
            </div>

            <!-- Main Content Area -->
            <div class="col-md-9">
                <div class="card account-card mb-4">
                    <div class="card-body">
                        <h4 class="card-title mb-4">Account</h4>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h5>Personal Information</h5>
                                <p class="text-muted">@Model.DisplayName</p>
                                <p class="text-muted">@Model.Email</p>
                                <button class="btn btn-outline-secondary btn-sm">Edit</button>
                            </div>
                            <div class="col-md-6">
                                <h5>Contact Information</h5>
                                <p class="text-muted">+1 (555) 123-4567</p>
                                <p class="text-muted">123 Apple Street, Cupertino, CA 95014</p>
                                <button class="btn btn-outline-secondary btn-sm">Edit</button>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!--Security Pane-->
                        <h5 class="mb-3">Security</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="p-3 security-item">
                                    <h6><i class="bi bi-shield-lock me-2"></i> Password</h6>
                                    <p class="text-muted">Last changed 3 months ago</p>
                                    <button class="btn btn-outline-secondary btn-sm">Change Password</button>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="p-3 security-item">
                                    <h6><i class="bi bi-key me-2"></i> Two-Factor Authentication</h6>
                                    <p class="text-muted">Enabled</p>
                                    <button class="btn btn-outline-secondary btn-sm">Manage</button>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!--Orders Section-->
                        <h5 class="mb-3">Orders</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="card device-card">
                                    <div class="card-body">
                                        <div class="d-flex">
                                            <!--Placeholder Item | GPU -->
                                            <i class="bi bi-phone fs-3 me-3"></i>
                                            <div>
                                                <h6>NVIDIA RTX 4090</h6>
                                                <p class="text-muted mb-1">Price: $2000 AUD</p>
                                                <small class="text-muted">Order Placed: Today</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="card device-card">
                                    <div class="card-body">
                                        <div class="d-flex">
                                            <!--Placeholder Item | Laptop -->
                                            <i class="bi bi-laptop fs-3 me-3"></i>
                                            <div>
                                                <h6>MacBook Pro</h6>
                                                <p class="text-muted mb-1">Price: $500 AUD</p>
                                                <small class="text-muted">Order Placed: Yesterday</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card account-card">
                    <div class="card-body">
                        <h4 class="card-title mb-4">Completed Orders</h4>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Order Name</th>
                                        <th>Items</th>
                                        <th>Date Completed</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!--Placeholder Items-->
                                    <tr>
                                        <td><i class="bi bi-music-note-beamed me-2"></i> Apple Music</td>
                                        <td>Individual</td>
                                        <td>June 15, 2023</td>
                                        <td><button class="btn btn-outline-secondary btn-sm">Manage</button></td>
                                    </tr>
                                    <tr>
                                        <td><i class="bi bi-tv me-2"></i> Apple TV+</td>
                                        <td>Family</td>
                                        <td>June 20, 2023</td>
                                        <td><button class="btn btn-outline-secondary btn-sm">Manage</button></td>
                                    </tr>
                                    <tr>
                                        <td><i class="bi bi-cloud me-2"></i> iCloud</td>
                                        <td>200GB</td>
                                        <td>June 1, 2023</td>
                                        <td><button class="btn btn-outline-secondary btn-sm">Manage</button></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

@section Scripts {
    <script src="https://unpkg.com/feather-icons"></script>
    <script>
        feather.replace();
    </script>
}