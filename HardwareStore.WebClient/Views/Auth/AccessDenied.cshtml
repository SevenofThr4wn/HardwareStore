@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout";
}

<div class="min-h-screen flex items-center justify-center pt-20 bg-gray-100">
    <div class="max-w-md w-full p-6">
        <div class="bg-white border border-gray-200 rounded-2xl shadow-lg p-10 transform transition-all hover:-translate-y-1 hover:shadow-2xl text-center">

            <!-- Icon -->
            <i class="bi bi-shield-slash text-6xl text-red-600 mb-6 animate-shake"></i>

            <!-- Title -->
            <h1 class="text-3xl font-semibold text-gray-900 mb-4">Access Denied</h1>

            <!-- Message -->
            <p class="text-gray-500 text-lg mb-6">
                You don't have permission to access this page.<br>
                Please contact an administrator if you believe this is an error.
            </p>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row justify-center gap-4">
                <a href="/" class="bg-blue-600 text-white rounded-xl font-semibold py-3 px-6 text-lg hover:bg-blue-700 transition-all inline-flex items-center justify-center">
                    <i class="bi bi-house-door mr-2"></i> Return to Home
                </a>
                <a href="/Contact" class="text-blue-600 font-medium hover:underline inline-flex items-center justify-center">
                    <i class="bi bi-envelope mr-2"></i> Contact Support
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Shake animation keyframes using Tailwind + custom
        const style = document.createElement('style');
        style.innerHTML = `
        @@keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-5px); }
            75% { transform: translateX(5px); }
        }
        .animate-shake {
            animation: shake 0.5s ease-in-out;
        }
        `;
        document.head.appendChild(style);
    </script>
}
