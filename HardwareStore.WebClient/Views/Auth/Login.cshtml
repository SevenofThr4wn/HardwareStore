@model HardwareStore.WebClient.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 pt-20">
    <div class="max-w-lg w-full p-6">
        <div class="bg-white border border-gray-200 rounded-2xl shadow-lg p-8 animate-fadeIn">

            <!-- Header -->
            <div class="text-center mb-6">
                <i class="bi bi-person-circle text-5xl text-blue-600 mb-3"></i>
                <h1 class="text-2xl font-semibold text-gray-900 mb-1">Welcome Back</h1>
                <p class="text-gray-500 text-base">Sign in to your Hardware Store account</p>
            </div>

            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="bg-red-500 text-white p-4 rounded-md mb-4 text-sm"></div>

            <!-- Login Form -->
            <form asp-action="Login" method="post">
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                <div class="mb-4">
                    <label asp-for="Username" class="block text-gray-900 font-medium mb-1">Username</label>
                    <input asp-for="Username" class="w-full h-12 px-4 border-2 border-gray-200 rounded-xl text-gray-900 focus:border-blue-600 focus:ring-1 focus:ring-blue-200 transition-all" placeholder="Enter your username" />
                    <span asp-validation-for="Username" class="text-red-500 text-sm mt-1 block"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Password" class="block text-gray-900 font-medium mb-1">Password</label>
                    <input asp-for="Password" type="password" class="w-full h-12 px-4 border-2 border-gray-200 rounded-xl text-gray-900 focus:border-blue-600 focus:ring-1 focus:ring-blue-200 transition-all" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-red-500 text-sm mt-1 block"></span>
                </div>

                <div class="mb-4 flex items-center gap-2">
                    <input asp-for="RememberMe" type="checkbox" class="w-5 h-5 text-blue-600 border-gray-300 rounded" />
                    <label asp-for="RememberMe" class="text-gray-500 text-sm">Remember me</label>
                </div>

                <button type="submit" class="w-full h-12 bg-blue-600 text-white font-semibold rounded-xl hover:bg-blue-700 transition-all">Sign In</button>
            </form>

            <!-- Links -->
            <div class="text-center mt-6">
                <a href="#" class="text-blue-600 hover:underline text-sm block mb-2">Forgot password?</a>
                <p class="text-gray-500 text-sm">
                    Don't have an account?
                    <a asp-action="Register" class="text-blue-600 font-medium hover:underline">Create one</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Adjust top padding if navbar exists
            const navbar = document.querySelector('.navbar');
            const mainContent = document.querySelector('body > div');
            if (navbar && mainContent) {
                mainContent.style.paddingTop = navbar.offsetHeight + 'px';
            }
        });
    </script>
}
