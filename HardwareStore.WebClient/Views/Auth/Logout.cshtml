@using System.Security.Claims
@{
    ViewData["Title"] = "Log Out";
    Layout = "_Layout";
}
<head>
    <style>
        /* Fix navigation bar spacing */
        .navbar {
            margin-bottom: 0 !important;
        }

        .main-content {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding-top: 80px; /* Height of navbar */
            margin-top: 0;
            background: linear-gradient(135deg, #f5f5f7 0%, #ffffff 50%, #f5f5f7 100%);
        }

        .logout-container {
            max-width: 500px;
            width: 100%;
            padding: 2rem;
            text-align: center;
        }

        .logout-card {
            border-radius: 20px;
            background: #fff;
            border: 1px solid #e5e5e7;
            box-shadow: 0 12px 32px rgba(0,0,0,0.12);
            padding: 3rem;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .logout-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 20px 48px rgba(0,0,0,0.16);
            }

        .logout-icon {
            font-size: 4rem;
            color: #0071e3;
            margin-bottom: 1.5rem;
        }

        .logout-title {
            font-size: 2.5rem;
            font-weight: 600;
            color: #1d1d1f;
            margin-bottom: 1rem;
            line-height: 1.2;
        }

        .logout-message {
            color: #86868b;
            font-size: 1.2rem;
            margin-bottom: 2.5rem;
            line-height: 1.6;
        }

        .logout-actions {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn-logout {
            background-color: #ff3b30;
            color: #fff;
            border: none;
            border-radius: 12px;
            padding: 1rem 2rem;
            font-size: 1.1rem;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
            cursor: pointer;
            min-width: 140px;
        }

            .btn-logout:hover {
                background-color: #e62a1d;
                transform: translateY(-1px);
                color: #fff;
                text-decoration: none;
                box-shadow: 0 8px 24px rgba(255,59,48,0.2);
            }

        .btn-cancel {
            background-color: #8e8e93;
            color: #fff;
            border: none;
            border-radius: 12px;
            padding: 1rem 2rem;
            font-size: 1.1rem;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
            cursor: pointer;
            min-width: 140px;
        }

            .btn-cancel:hover {
                background-color: #7d7d82;
                transform: translateY(-1px);
                color: #fff;
                text-decoration: none;
                box-shadow: 0 8px 24px rgba(142,142,147,0.2);
            }

        .user-info {
            background-color: #f8f9fa;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            border-left: 4px solid #0071e3;
        }

        .user-name {
            font-weight: 600;
            color: #1d1d1f;
            margin-bottom: 0.5rem;
        }

        .user-email {
            color: #86868b;
            font-size: 1rem;
        }

        /* Responsive design */
        @@media (max-width: 768px) {
            .logout-container {
                padding: 1rem;
            }

            .logout-card {
                padding: 2rem;
                margin: 1rem;
            }

            .logout-title {
                font-size: 2rem;
            }

            .logout-icon {
                font-size: 3rem;
            }

            .logout-message {
                font-size: 1.1rem;
            }

            .logout-actions {
                flex-direction: column;
                gap: 0.75rem;
            }

            .btn-logout,
            .btn-cancel {
                width: 100%;
            }
        }

        @@media (max-width: 480px) {
            .logout-card {
                padding: 1.5rem;
            }

            .logout-title {
                font-size: 1.75rem;
            }

            .logout-icon {
                font-size: 2.5rem;
            }

            .btn-logout,
            .btn-cancel {
                padding: 0.875rem 1.5rem;
                font-size: 1rem;
            }
        }

        /* Animation */
        @@keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }
        }

        .logout-icon {
            animation: pulse 2s ease-in-out infinite;
        }

        /* Accessibility */
        @@media (prefers-reduced-motion: reduce) {
            .logout-card, .btn-logout, .btn-cancel {
                transition: none;
                transform: none !important;
            }

            .logout-icon {
                animation: none;
            }
        }
    </style>
</head>
<body>
    <div class="main-content">
        <div class="logout-container">
            <div class="logout-card">
                <!-- Icon -->
                <i class="bi bi-box-arrow-right logout-icon"></i>

                <!-- Title -->
                <h1 class="logout-title">Sign Out</h1>

                <!-- User Info -->
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="user-info">
                        <div class="user-name">
                            <i class="bi bi-person-circle me-2"></i>@User.Identity.Name
                        </div>
                        <div class="user-email">
                            @User.FindFirstValue(ClaimTypes.Email) ?? User.FindFirstValue("email") ?? "No email available"
                        </div>
                    </div>
                }

                <!-- Message -->
                <p class="logout-message">
                    Are you sure you want to sign out?<br>
                    You'll need to sign in again to access your account.
                </p>

                <!-- Action Buttons -->
                <div class="logout-actions">
                    <!-- Cancel Button -->
                    <a href="/" class="btn-cancel">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>

                    <!-- Logout Form -->
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn-logout">
                            <i class="bi bi-box-arrow-right"></i> Sign Out
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add subtle hover effect to the card
            const card = document.querySelector('.logout-card');
            if (card) {
                card.addEventListener('mouseenter', () => {
                    card.style.transform = 'translateY(-4px)';
                    card.style.boxShadow = '0 20px 48px rgba(0,0,0,0.16)';
                });

                card.addEventListener('mouseleave', () => {
                    card.style.transform = 'translateY(0)';
                    card.style.boxShadow = '0 12px 32px rgba(0,0,0,0.12)';
                });
            }

            // Prevent form resubmission on page refresh
            if (window.history.replaceState) {
                window.history.replaceState(null, null, window.location.href);
            }
        });
    </script>
}