@model HardwareStore.Core.Models.Order

@{
    ViewData["Title"] = "Cancel Order";
}

<head>
    <style>
        body {
            background-color: #f5f5f7;
            color: #1d1d1f;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            font-size: 16px;
        }

        .account-card {
            border-radius: 16px;
            background: #fff;
            border: 1px solid #e5e5e7;
            box-shadow: 0 8px 24px rgba(0,0,0,0.08);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .account-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 16px 32px rgba(0,0,0,0.12);
            }

        .btn-apple {
            background-color: #0071e3;
            color: #fff;
            font-size: 1.1rem;
            padding: 0.75rem 1.5rem;
            border-radius: 12px;
            font-weight: 500;
            transition: transform 0.2s ease;
            border: none;
        }

            .btn-apple:hover {
                background-color: #0062c4;
                transform: translateY(-1px);
            }

        .btn-outline-secondary {
            border-radius: 12px;
            font-weight: 500;
            padding: 0.75rem 1.5rem;
            transition: transform 0.2s ease;
        }

        .table th {
            font-weight: 600;
            padding: 0.75rem;
            width: 35%;
        }

        .table td {
            padding: 0.75rem;
        }

        .d-flex.gap-2 > * {
            margin-right: 0.5rem;
        }

        @@media (max-width: 768px) {
            body
        {
            font-size: 14px;
        }

        .btn-apple, .btn-outline-secondary {
            width: 100%;
            margin-bottom: 0.5rem;
        }

        .d-flex.gap-2 {
            flex-direction: column;
        }

        }
    </style>
</head>

<body>
    <main class="container my-4">
        <div class="row justify-content-center">
            <div class="col-lg-8">

                <!-- Cancel Order Card -->
                <div class="card account-card mb-4">
                    <div class="card-body">
                        <h4 class="card-title mb-3">Cancel Order</h4>
                        <p class="text-muted mb-4">Are you sure you want to delete this order? This action cannot be undone.</p>

                        <!-- Order Details -->
                        <h5 class="mb-3">Order Details</h5>
                        <div class="table-responsive mb-4">
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <th>Order Number</th>
                                        <td>@Html.DisplayFor(model => model.OrderNo)</td>
                                    </tr>
                                    <tr>
                                        <th>Total Amount</th>
                                        <td>@Html.DisplayFor(model => model.TotalAmount)</td>
                                    </tr>
                                    <tr>
                                        <th>Status</th>
                                        <td>@Html.DisplayFor(model => model.Status)</td>
                                    </tr>
                                    <tr>
                                        <th>Order Date</th>
                                        <td>@Html.DisplayFor(model => model.OrderDate)</td>
                                    </tr>
                                    <tr>
                                        <th>Last Updated</th>
                                        <td>@Html.DisplayFor(model => model.UpdatedDate)</td>
                                    </tr>
                                    <tr>
                                        <th>Shipping Address</th>
                                        <td>@Html.DisplayFor(model => model.ShippingAddress), @Html.DisplayFor(model => model.ShippingCity), @Html.DisplayFor(model => model.ShippingPostalCode), @Html.DisplayFor(model => model.ShippingCountry)</td>
                                    </tr>
                                    <tr>
                                        <th>User ID</th>
                                        <td>@Html.DisplayFor(model => model.User.UserId)</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2">
                            <form asp-action="CancelOrder">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn-apple">Delete Order</button>
                            </form>
                            <a asp-action="Index" class="btn btn-outline-secondary">Back to Orders</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </main>
</body>