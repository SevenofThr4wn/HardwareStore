@{
    ViewData["Title"] = "Manager Settings";
    Layout = "_Layout";
}

<div class="max-w-4xl mx-auto mt-8 px-6">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-4xl font-semibold text-gray-900">Manager Settings</h1>
        <p class="text-gray-500">Inventory and team management preferences</p>
    </div>

    <!-- Settings Card -->
    <div class="bg-white border border-gray-200 rounded-2xl p-8 shadow-md space-y-8">
        <!-- Inventory Alerts Section -->
        <div class="space-y-4">
            <h3 class="text-2xl font-semibold text-gray-900">Inventory Alerts</h3>

            <div class="flex items-center mb-2">
                <input type="checkbox" checked class="w-5 h-5 text-blue-600 border-gray-300 rounded focus:ring-2 focus:ring-blue-300">
                <label class="ml-2 text-gray-900">Email notifications for low stock</label>
            </div>

            <div class="flex items-center mb-2">
                <input type="checkbox" checked class="w-5 h-5 text-blue-600 border-gray-300 rounded focus:ring-2 focus:ring-blue-300">
                <label class="ml-2 text-gray-900">SMS notifications for critical stock</label>
            </div>

            <div class="mt-3">
                <label class="block font-semibold text-gray-900 mb-2">Low Stock Threshold</label>
                <input type="number" class="w-full border-2 border-gray-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-300" value="10">
            </div>
        </div>

        <!-- Order Processing Section -->
        <div class="space-y-4">
            <h3 class="text-2xl font-semibold text-gray-900">Order Processing</h3>

            <div class="flex items-center mb-2">
                <input type="checkbox" checked class="w-5 h-5 text-blue-600 border-gray-300 rounded focus:ring-2 focus:ring-blue-300">
                <label class="ml-2 text-gray-900">Auto-confirm orders</label>
            </div>

            <div class="flex items-center mb-2">
                <input type="checkbox" class="w-5 h-5 text-blue-600 border-gray-300 rounded focus:ring-2 focus:ring-blue-300">
                <label class="ml-2 text-gray-900">Require manager approval for large orders</label>
            </div>
        </div>

        <!-- Save Button -->
        <button class="inline-flex items-center bg-blue-600 text-white font-semibold px-6 py-3 rounded-xl hover:bg-blue-700 transition">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m0 0a9 9 0 11-4 4" />
            </svg>
            Save Preferences
        </button>
    </div>
</div>
