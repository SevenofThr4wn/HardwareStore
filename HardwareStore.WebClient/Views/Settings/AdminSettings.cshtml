@{
    ViewData["Title"] = "Admin Settings";
    Layout = "_Layout";
}

<div class="max-w-4xl mx-auto mt-8 px-6">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-4xl font-semibold text-gray-900">Admin Settings</h1>
        <p class="text-gray-500">System configuration and preferences</p>
    </div>

    <!-- Settings Card -->
    <div class="bg-white border border-gray-200 rounded-2xl p-8 shadow-md space-y-8">
        <!-- System Settings Section -->
        <div class="space-y-6">
            <h3 class="text-2xl font-semibold text-gray-900">System Settings</h3>

            <div class="space-y-4">
                <div>
                    <label class="block font-semibold text-gray-900 mb-2">Store Name</label>
                    <input type="text" class="w-full border-2 border-gray-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-300" value="Hardware Store Pro">
                </div>

                <div>
                    <label class="block font-semibold text-gray-900 mb-2">Store Email</label>
                    <input type="email" class="w-full border-2 border-gray-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-300" value="admin@hardwarestore.com">
                </div>

                <div>
                    <label class="block font-semibold text-gray-900 mb-2">Currency</label>
                    <select class="w-full border-2 border-gray-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-300">
                        <option selected>USD ($)</option>
                        <option>EUR (€)</option>
                        <option>GBP (£)</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Security Settings Section -->
        <div class="space-y-6">
            <h3 class="text-2xl font-semibold text-gray-900">Security Settings</h3>

            <div class="space-y-4">
                <div>
                    <label class="block font-semibold text-gray-900 mb-2">Session Timeout</label>
                    <select class="w-full border-2 border-gray-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-300">
                        <option>15 minutes</option>
                        <option>30 minutes</option>
                        <option selected>60 minutes</option>
                        <option>120 minutes</option>
                    </select>
                </div>

                <div>
                    <label class="block font-semibold text-gray-900 mb-2">Password Policy</label>
                    <select class="w-full border-2 border-gray-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-300">
                        <option>Basic (6+ characters)</option>
                        <option selected>Standard (8+ characters with numbers)</option>
                        <option>Strong (12+ characters with numbers and symbols)</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Save Button -->
        <button class="inline-flex items-center bg-blue-600 text-white font-semibold px-6 py-3 rounded-xl hover:bg-blue-700 transition">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m0 0a9 9 0 11-4 4" />
            </svg>
            Save Settings
        </button>
    </div>
</div>
