@model HardwareStore.WebClient.ViewModels.Account.RegisterViewModel
@{
    ViewData["Title"] = "Create Account";
    Layout = "_Layout";
}
<head>
    <style>
        /* Reuse the same styles from login with some adjustments */
        .main-content {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding-top: 0;
            margin-top: 0;
        }

        .register-container {
            max-width: 775px;
            width: 100%;
            padding: 2rem;
            margin-top: 2rem;
        }

        .register-card {
            border-radius: 20px;
            background: #fff;
            border: 1px solid #e5e5e7;
            box-shadow: 0 12px 32px rgba(0,0,0,0.12);
            padding: 2.5rem;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .register-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 20px 48px rgba(0,0,0,0.16);
            }

        .register-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .register-icon {
            font-size: 3.5rem;
            color: #0071e3;
            margin-bottom: 1rem;
        }

        .register-title {
            font-size: 2rem;
            font-weight: 600;
            color: #1d1d1f;
            margin-bottom: 0.5rem;
        }

        .register-subtitle {
            color: #86868b;
            font-size: 1.1rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: 500;
            color: #1d1d1f;
            margin-bottom: 0.5rem;
            font-size: 1.1rem;
            display: block;
        }

        .form-control {
            border-radius: 12px;
            border: 2px solid #e5e5e7;
            padding: 1rem;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            height: 50px;
            width: 100%;
            box-sizing: border-box;
        }

            .form-control:focus {
                border-color: #0071e3;
                box-shadow: 0 0 0 3px rgba(0,113,227,0.1);
                outline: none;
            }

        .btn-register {
            background-color: #0071e3;
            color: #fff;
            border: none;
            border-radius: 12px;
            padding: 1rem 2rem;
            font-size: 1.1rem;
            font-weight: 600;
            width: 100%;
            transition: all 0.3s ease;
            height: 50px;
            cursor: pointer;
        }

            .btn-register:hover {
                background-color: #0062c4;
                transform: translateY(-1px);
            }

        .login-link {
            text-align: center;
            margin-top: 2rem;
            color: #86868b;
        }

            .login-link a {
                color: #0071e3;
                text-decoration: none;
                font-weight: 500;
            }

                .login-link a:hover {
                    text-decoration: underline;
                }

        .text-danger {
            color: #ff3b30;
            font-size: 0.9rem;
            margin-top: 0.25rem;
            display: block;
        }

        .validation-summary-errors {
            background-color: #ff3b30;
            color: white;
            padding: 1rem;
            border-radius: 12px;
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .register-container {
                padding: 1rem;
            }

            .register-card {
                padding: 2rem;
            }

            .register-title {
                font-size: 1.75rem;
            }
        }
    </style>
</head>
<body>
    <div class="main-content">
        <div class="register-container">
            <div class="register-card">
                <!-- Header -->
                <div class="register-header">
                    <i class="bi bi-person-plus register-icon"></i>
                    <h1 class="register-title">Create Account</h1>
                    <p class="register-subtitle">Join the community!</p>
                </div>

                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

                <!-- Register Form -->
                <form asp-action="Register" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FirstName" class="form-label">First Name</label>
                                <input asp-for="FirstName" class="form-control"/>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="LastName" class="form-label">Last Name</label>
                                <input asp-for="LastName" class="form-control"/>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Username" class="form-label">Username</label>
                        <input asp-for="Username" class="form-control"/>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" type="email" class="form-control"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control"/>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn-register">Create Account</button>
                </form>

                <!-- Login Link -->
                <div class="login-link">
                    Already have an account? <a asp-action="Login">Sign in</a>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}