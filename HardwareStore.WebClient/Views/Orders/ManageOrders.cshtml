@{
    ViewData["Title"] = "Manage Orders";
}

<main class="max-w-6xl mx-auto my-12 px-6">
    <div class="mb-6">
        <h1 class="text-3xl font-semibold text-gray-900">Manage Orders</h1>
        <p class="text-gray-500 mt-1">Process and track customer orders</p>
    </div>

    <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
        <table class="min-w-full text-left divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 font-semibold text-gray-700">Order ID</th>
                    <th class="px-6 py-3 font-semibold text-gray-700">Customer</th>
                    <th class="px-6 py-3 font-semibold text-gray-700">Date</th>
                    <th class="px-6 py-3 font-semibold text-gray-700">Amount</th>
                    <th class="px-6 py-3 font-semibold text-gray-700">Status</th>
                    <th class="px-6 py-3 font-semibold text-gray-700">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4">#10025</td>
                    <td class="px-6 py-4">John Smith</td>
                    <td class="px-6 py-4">Dec 15, 2023</td>
                    <td class="px-6 py-4">$249.99</td>
                    <td class="px-6 py-4">
                        <span class="inline-block px-3 py-1 rounded-full font-semibold text-white bg-orange-500">Pending</span>
                    </td>
                    <td class="px-6 py-4 space-x-2">
                        <button class="px-3 py-1 rounded-lg border border-blue-500 text-blue-500 hover:bg-blue-50 transition">View</button>
                        <button class="px-3 py-1 rounded-lg border border-green-500 text-green-500 hover:bg-green-50 transition">Process</button>
                    </td>
                </tr>
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4">#10024</td>
                    <td class="px-6 py-4">Jane Doe</td>
                    <td class="px-6 py-4">Dec 15, 2023</td>
                    <td class="px-6 py-4">$129.99</td>
                    <td class="px-6 py-4">
                        <span class="inline-block px-3 py-1 rounded-full font-semibold text-white bg-blue-600">Processing</span>
                    </td>
                    <td class="px-6 py-4 space-x-2">
                        <button class="px-3 py-1 rounded-lg border border-blue-500 text-blue-500 hover:bg-blue-50 transition">View</button>
                        <button class="px-3 py-1 rounded-lg border border-green-500 text-green-500 hover:bg-green-50 transition">Ship</button>
                    </td>
                </tr>
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4">#10023</td>
                    <td class="px-6 py-4">Bob Johnson</td>
                    <td class="px-6 py-4">Dec 14, 2023</td>
                    <td class="px-6 py-4">$89.99</td>
                    <td class="px-6 py-4">
                        <span class="inline-block px-3 py-1 rounded-full font-semibold text-white bg-green-500">Shipped</span>
                    </td>
                    <td class="px-6 py-4 space-x-2">
                        <button class="px-3 py-1 rounded-lg border border-blue-500 text-blue-500 hover:bg-blue-50 transition">View</button>
                        <button class="px-3 py-1 rounded-lg border border-green-500 text-green-500 hover:bg-green-50 transition">Track</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</main>
