@model HardwareStore.Core.Models.Order

@{
    ViewData["Title"] = "Cancel Order";
}

<main class="max-w-4xl mx-auto my-12 px-6">
    <!-- Cancel Order Card -->
    <div class="bg-white rounded-2xl border border-gray-200 shadow-lg p-6 space-y-6">
        <h4 class="text-2xl font-semibold">Cancel Order</h4>
        <p class="text-gray-500">Are you sure you want to delete this order? This action cannot be undone.</p>

        <!-- Order Details -->
        <h5 class="text-lg font-semibold mt-4">Order Details</h5>
        <div class="overflow-x-auto">
            <table class="w-full text-left text-sm divide-y divide-gray-200">
                <tbody class="divide-y divide-gray-200">
                    <tr>
                        <th class="py-2 font-semibold w-1/3">Order Number</th>
                        <td class="py-2">@Html.DisplayFor(model => model.OrderNo)</td>
                    </tr>
                    <tr>
                        <th class="py-2 font-semibold">Total Amount</th>
                        <td class="py-2">@Html.DisplayFor(model => model.TotalAmount)</td>
                    </tr>
                    <tr>
                        <th class="py-2 font-semibold">Status</th>
                        <td class="py-2">@Html.DisplayFor(model => model.Status)</td>
                    </tr>
                    <tr>
                        <th class="py-2 font-semibold">Order Date</th>
                        <td class="py-2">@Html.DisplayFor(model => model.OrderDate)</td>
                    </tr>
                    <tr>
                        <th class="py-2 font-semibold">Last Updated</th>
                        <td class="py-2">@Html.DisplayFor(model => model.UpdatedDate)</td>
                    </tr>
                    <tr>
                        <th class="py-2 font-semibold">Shipping Address</th>
                        <td class="py-2">
                            @Html.DisplayFor(model => model.ShippingAddress),
                            @Html.DisplayFor(model => model.ShippingCity),
                            @Html.DisplayFor(model => model.ShippingPostalCode),
                            @Html.DisplayFor(model => model.ShippingCountry)
                        </td>
                    </tr>
                    <tr>
                        <th class="py-2 font-semibold">User ID</th>
                        <td class="py-2">@Html.DisplayFor(model => model.User!.UserId)</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 mt-4">
            <form asp-action="CancelOrder" class="flex-1">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="w-full bg-blue-600 text-white font-medium py-3 rounded-xl hover:bg-blue-700 transition transform hover:-translate-y-0.5">
                    Delete Order
                </button>
            </form>
            <a asp-action="Index" class="w-full sm:w-auto bg-gray-100 text-gray-700 font-medium py-3 px-6 rounded-xl hover:bg-gray-200 transition text-center">
                Back to Orders
            </a>
        </div>
    </div>
</main>
