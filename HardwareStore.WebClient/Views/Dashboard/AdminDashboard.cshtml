@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_Layout";
}

<div class="max-w-[1400px] mx-auto p-6">
    <!-- Header -->
    <div class="mb-6">
        <h1 class="text-3xl font-semibold text-gray-900 mb-1">Admin Dashboard</h1>
        <p class="text-gray-500 text-lg">Welcome back Admin, Here's what's happening today.</p>
    </div>

    <!-- Statistics -->
    <div class="grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 mb-6">
        <div class="bg-white border border-gray-200 rounded-2xl p-6 shadow hover:translate-y-[-2px] transition-transform">
            <i class="bi bi-people text-2xl text-blue-600 mb-3"></i>
            <div class="text-3xl font-bold text-gray-900 mb-1">@Model.TotalUsers</div>
            <div class="text-gray-500 font-medium">Total Users</div>
        </div>
        <div class="bg-white border border-gray-200 rounded-2xl p-6 shadow hover:translate-y-[-2px] transition-transform">
            <i class="bi bi-cart text-2xl text-blue-600 mb-3"></i>
            <div class="text-3xl font-bold text-gray-900 mb-1">@Model.TotalOrders</div>
            <div class="text-gray-500 font-medium">Today's Orders</div>
        </div>
        <div class="bg-white border border-gray-200 rounded-2xl p-6 shadow hover:translate-y-[-2px] transition-transform">
            <i class="bi bi-currency-dollar text-2xl text-blue-600 mb-3"></i>
            <div class="text-3xl font-bold text-gray-900 mb-1">$@Model.TotalRevenue</div>
            <div class="text-gray-500 font-medium">Revenue</div>
        </div>
        <div class="bg-white border border-gray-200 rounded-2xl p-6 shadow hover:translate-y-[-2px] transition-transform">
            <i class="bi bi-box-seam text-2xl text-blue-600 mb-3"></i>
            <div class="text-3xl font-bold text-gray-900 mb-1">@Model.TotalProducts</div>
            <div class="text-gray-500 font-medium">Products</div>
        </div>
    </div>

    <!-- Quick Actions -->
    <h3 class="text-xl font-semibold mb-3">Quick Actions</h3>
    <div class="grid gap-4 grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 mb-6">
        @foreach (var action in Model.QuickActions)
        {
            <a href="@action.Url" class="bg-white border border-gray-200 rounded-2xl p-6 text-center shadow hover:translate-y-[-2px] hover:shadow-lg transition-all no-underline text-gray-900">
                <i class="@action.Icon text-3xl text-blue-600 mb-3"></i>
                <div class="font-semibold mb-1">@action.Title</div>
                <div class="text-gray-500 text-sm">@action.Description</div>
            </a>
        }
    </div>

    <!-- Recent Activity -->
    <div class="bg-white border border-gray-200 rounded-2xl p-6">
        <h3 class="text-xl font-semibold mb-4">Recent Activity</h3>
        <div class="space-y-4">
            @foreach (var activity in Model.RecentActivity)
            {
                <div class="flex items-center gap-4 border-b border-gray-100 pb-4 last:border-b-0 last:pb-0">
                    <i class="@activity.Icon text-blue-600 text-xl"></i>
                    <div class="flex-1">
                        <p class="text-gray-900">@activity.Text</p>
                        <span class="text-gray-500 text-sm">@activity.TimeAgo</span>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
