@{
    ViewData["Title"] = "Manager Dashboard";
    Layout = "_Layout";
}

<div class="max-w-[1400px] mx-auto p-6">
    <!-- Header -->
    <div class="mb-6">
        <h1 class="text-3xl font-semibold text-gray-900 mb-1">Manager Dashboard</h1>
        <p class="text-gray-500 text-lg">Inventory and team management</p>
    </div>

    <!-- Statistics -->
    <div class="grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 mb-6">
        <div class="bg-white border border-gray-200 rounded-2xl p-6 shadow hover:translate-y-[-2px] transition-transform">
            <i class="bi bi-box-seam text-2xl text-blue-600 mb-3"></i>
            <div class="text-2xl font-bold text-gray-900 mb-1">@Model.TotalProducts</div>
            <div class="text-gray-500 font-medium">Total Products</div>
        </div>
        <div class="bg-white border border-gray-200 rounded-2xl p-6 shadow hover:translate-y-[-2px] transition-transform">
            <i class="bi bi-arrow-down-circle text-2xl text-blue-600 mb-3"></i>
            <div class="text-2xl font-bold text-gray-900 mb-1">@Model.LowStockProducts</div>
            <div class="text-gray-500 font-medium">Low Stock Items</div>
        </div>
        <div class="bg-white border border-gray-200 rounded-2xl p-6 shadow hover:translate-y-[-2px] transition-transform">
            <i class="bi bi-people text-2xl text-blue-600 mb-3"></i>
            <div class="text-2xl font-bold text-gray-900 mb-1">@Model.TotalStaff</div>
            <div class="text-gray-500 font-medium">Team Members</div>
        </div>
        <div class="bg-white border border-gray-200 rounded-2xl p-6 shadow hover:translate-y-[-2px] transition-transform">
            <i class="bi bi-cart text-2xl text-blue-600 mb-3"></i>
            <div class="text-2xl font-bold text-gray-900 mb-1">@Model.PendingOrders</div>
            <div class="text-gray-500 font-medium">Pending Orders</div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="grid gap-4 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
        <a href="@Url.Action("ManageProducts")" class="bg-white border border-gray-200 rounded-2xl p-6 text-center shadow hover:translate-y-[-2px] hover:shadow-lg transition-all text-gray-900 no-underline">
            <i class="bi bi-box-seam text-3xl text-blue-600 mb-3"></i>
            <div class="font-semibold mb-1">Inventory</div>
            <div class="text-gray-500 text-sm">Manage stock levels</div>
        </a>
        <a href="@Url.Action("ManageOrders")" class="bg-white border border-gray-200 rounded-2xl p-6 text-center shadow hover:translate-y-[-2px] hover:shadow-lg transition-all text-gray-900 no-underline">
            <i class="bi bi-cart-check text-3xl text-blue-600 mb-3"></i>
            <div class="font-semibold mb-1">Orders</div>
            <div class="text-gray-500 text-sm">Process customer orders</div>
        </a>
        <a href="@Url.Action("ManagerSettings")" class="bg-white border border-gray-200 rounded-2xl p-6 text-center shadow hover:translate-y-[-2px] hover:shadow-lg transition-all text-gray-900 no-underline">
            <i class="bi bi-gear text-3xl text-blue-600 mb-3"></i>
            <div class="font-semibold mb-1">Settings</div>
            <div class="text-gray-500 text-sm">Manager preferences</div>
        </a>
    </div>
</div>
